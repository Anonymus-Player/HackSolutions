{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "clang-cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Zc:preprocessor",
                "/std:c++latest",
                "/Wall",
                "/analyze-",
                "/nologo",
                "/Fe:",
                "${workspaceFolder}\\Tests\\cpp\\ExecDumps\\${fileBasenameNoExtension}.exe",
                "${file}",
                "-I${workspaceFolder}/cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}